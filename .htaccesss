Options +FollowSymlinks
RewriteEngine On
# ============================================================================== #

# untuk admin
RewriteCond %{REQUEST_URI} ^/(admin)
RewriteRule ^admin/assets/(.*)$ backend/web/assets/$1 [L]
RewriteRule ^admin/css/(.*)$ backend/web/css/$1 [L]
RewriteRule ^admin/fonts/(.*)$ backend/web/fonts/$1 [L]
RewriteRule ^admin/images/(.*)$ backend/web/img/$1 [L]
RewriteRule ^admin/js/(.*)$ backend/web/js/$1 [L]

# ========Jika tidak memenuhi kondisi di atas, maka arahkan ke index.php======== #
RewriteCond %{REQUEST_URI} !^/backend/web/(assets|css|fonts|images|js)/
RewriteCond %{REQUEST_URI} ^/(admin)
RewriteRule ^.*$ backend/web/index.php [L]
# ============================================================================== #

# ============================================================================== #
RewriteRule ^assets/(.*)$ frontend/web/assets/$1 [L]
RewriteRule ^css/(.*)$ frontend/web/css/$1 [L]
RewriteRule ^fonts/(.*)$ frontend/web/fonts/$1 [L]
RewriteRule ^images/(.*)$ frontend/web/images/$1 [L]
RewriteRule ^js/(.*)$ frontend/web/js/$1 [L]
RewriteRule ^img/(.*)$ frontend/web/img/$1 [L]
RewriteRule ^vendor/(.*)$ frontend/web/vendor/$1 [L]
RewriteRule ^blank/(.*)$ frontend/web/blank/$1 [L]
# ========Jika tidak memenuhi kondisi di atas, maka arahkan ke index.php======== #
RewriteCond %{REQUEST_URI} !^/(backend|frontend)/web/(assets|css|fonts|images|js|vendor|blank|img)/
RewriteCond %{REQUEST_URI} !index.php
RewriteCond %{REQUEST_FILENAME} !-f [OR]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ frontend/web/index.php
# ====================================================